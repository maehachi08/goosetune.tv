            <i class="play circle icon au-nav-form-icon"></i>
            <span>YouTubeLive検索</span>
          </div>
          <form class="au-form-inline" action="/youtubes/_live" accept-charset="UTF-8" method="get">
            <input name="utf8" type="hidden" value="✓">
            <select name="youtube[id]" class="au-select-inline">
              <% @common['select_form_of_youtube_live'].each do |entry| %>
                <option value="<%= entry['id'] %>"><%= entry['title'] %></option>
              <% end %>
            </select>
            <button type="submit" class="au-button-inline">検索</button>
