  <!-- Bottom Row: Search Forms -->
  <div class="au-nav-desktop-secondary">
    <div class="au-nav-desktop-container">
      <!-- First Row of Forms -->
      <div class="au-nav-desktop-forms">
        
        <!-- Keyword Search -->
        <div class="au-nav-desktop-form-item">
          <div class="au-nav-desktop-form-header">
            <i class="search icon au-nav-form-icon"></i>
            <span>キーワード検索</span>
          </div>
          <form class="au-form-inline" action="/youtubes/keyword" accept-charset="UTF-8" method="get">
            <input name="utf8" type="hidden" value="✓">
            <input name="search[keyword]" placeholder="動画を検索..." type="search" autocomplete="off" class="au-search-input-inline">
            <button type="submit" class="au-button-inline">検索</button>
          </form>
        </div>
        
        <!-- YouTube Upload Month Search -->
        <div class="au-nav-desktop-form-item">
          <div class="au-nav-desktop-form-header">
            <i class="calendar icon au-nav-form-icon"></i>
            <span>アップロード月検索</span>
          </div>
          <form class="au-form-inline" action="/youtubes/_upload_month" accept-charset="UTF-8" method="get">
            <input name="utf8" type="hidden" value="✓">
            <select name="youtube[published][year]" class="au-select-inline">
              <% (@common['select_form_of_upload_month']['first_entry_year']..
                  @common['select_form_of_upload_month']['latest_entry_year']).each do |year| %>
                <option value="<%= year %>"><%= year %>年</option>
              <% end %>
            </select>
            <select name="youtube[published][month]" class="au-select-inline">
              <option value="1">1月</option>
              <option value="2">2月</option>
              <option value="3">3月</option>
              <option value="4">4月</option>
              <option value="5">5月</option>
              <option value="6">6月</option>
              <option value="7" selected>7月</option>
              <option value="8">8月</option>
              <option value="9">9月</option>
              <option value="10">10月</option>
              <option value="11">11月</option>
              <option value="12">12月</option>
            </select>
            <input type="hidden" name="youtube[published(3i)]" value="1">
            <button type="submit" class="au-button-inline">検索</button>
          </form>
        </div>

      </div>
      
      <!-- Second Row of Forms -->
      <div class="au-nav-desktop-forms">

        <!-- Ustream Search -->
        <div class="au-nav-desktop-form-item">
          <div class="au-nav-desktop-form-header">
            <i class="video icon au-nav-form-icon"></i>
            <span>Ustream放送検索</span>
