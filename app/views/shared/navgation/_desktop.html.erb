          <form class="au-form-inline" action="/ustreams/_published" accept-charset="UTF-8" method="get">
            <input name="utf8" type="hidden" value="✓">
            <select name="ustreams[id]" class="au-select-inline">
              <% @common['select_form_of_ustream'].each do |entry| %>
                <option value="<%= entry['id'] %>"><%= entry['title'] %></option>
              <% end %>
            </select>
            <button type="submit" class="au-button-inline">検索</button>
          </form>
        </div>

        <!-- YouTube Live Search -->
        <div class="au-nav-desktop-form-item">
