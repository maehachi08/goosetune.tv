      <div id="bottom-editarea">
        <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>
      </div>

      <!-- <div class="jumbotron"></div> -->
      <%= yield %>

      <!-- Footer -->
      <footer style="position: relative; top: 100px;">
        <div class="jumbotron"></div>
        <div id="title">
          <p class="text-muted">
            <small>
              <%= "#{Date.today.year} GoosetuneTV" %>
              <br>
              <%= "Goosehouse動画を検索できるまとめ" %>
            </small>
          </p>
        </div>
      </footer>
    </div>


</body>
</html>
