        // au.com style navigation accordion
        $('.au-nav-category-header').on('click', function() {
            const $category = $(this).closest('.au-nav-category');
            const $content = $category.find('.au-nav-category-content');

            if ($category.hasClass('active')) {
                $category.removeClass('active');
                $content.slideUp(200);
            } else {
                $category.addClass('active');
                $content.slideDown(200);
            }
        });

        $('.au-nav-subcategory-header').on('click', function() {
            const $subcategory = $(this).closest('.au-nav-subcategory');
            const $content = $subcategory.find('.au-nav-subcategory-content');

            if ($subcategory.hasClass('active')) {
                $subcategory.removeClass('active');
                $content.slideUp(150);
            } else {
                $subcategory.addClass('active');
                $content.slideDown(150);
            }
        });

        // Tablet navigation toggle
        $('#tablet-menu-toggle').on('click', function() {
            const $dropdown = $('#tablet-dropdown');
            $dropdown.toggleClass('active');
        });

        // Mobile navigation toggle
        $('#mobile-menu-toggle').on('click', function() {
            $('#mobile-sidebar').addClass('active');
            $('body').css('overflow', 'hidden');
        });

        $('#mobile-menu-close, #mobile-overlay').on('click', function() {
            $('#mobile-sidebar').removeClass('active');
            $('body').css('overflow', '');
        });

        // Close dropdowns when clicking outside
        $(document).on('click', function(e) {
            if (!$(e.target).closest('.au-nav-tablet').length) {
                $('#tablet-dropdown').removeClass('active');
            }
        });

        // Page top button functionality - optimized for .pusher scroll container
        function initPageTopButton() {
            const $pageTop = $('#pageTop');
            const $pusher = $('.pusher');
            
            // Initially hide the button
            $pageTop.hide();
            
            // Click handler for page top button
            $('#pageTop, #pageTop a').off('click').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                console.log('PageTop button clicked');
                
                // Scroll the .pusher element (which is the actual scrollable container)
                if ($pusher.length > 0) {
                    $pusher.animate({
                        scrollTop: 0
                    }, 500);
                } else {
                    // Fallback to window scroll
                    $('html, body').animate({
                        scrollTop: 0
                    }, 500);
                }
                
                return false;
            });
            
            // Show/hide pageTop button based on scroll position
            // Listen to .pusher scroll events since that's the actual scrollable container
            if ($pusher.length > 0) {
                $pusher.scroll(function() {
                    if ($(this).scrollTop() > 300) {
                        $pageTop.fadeIn(300);
                    } else {
                        $pageTop.fadeOut(300);
                    }
                });
            } else {
                // Fallback to window scroll for pages without .pusher
                $(window).scroll(function() {
                    if ($(this).scrollTop() > 300) {
                        $pageTop.fadeIn(300);
                    } else {
                        $pageTop.fadeOut(300);
                    }
                });
            }
        }
        
        // Initialize page top button
        initPageTopButton();



      });
  </script>

