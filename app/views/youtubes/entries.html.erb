<div class="container">

  <div id="bottom-editarea">
    <p id="pageTop"><a href="#"><i class="fa fa-chevron-up"></i></a></p>
  </div>

  <div class="ui raised segment" style="padding-bottom: 5em;">
    <h1 class="title"><%= raw(@title) %></h1>

    <div class="ui six stackable cards column grid masonry" id="masonry">
      <% @data['youtubes'].each do |entry| %>
          <%= render :partial => 'shared/entry', :locals => { :entry => entry } %>
      <% end %>
    </div>

    <nav id="page-nav" style="visibility: hidden; position: absolute; top: -9999px;">
      <!-- DEBUG: next-page = <%= @headers ? @headers['x-next-page'] : 'nil' %> -->
      <% if not request.path_info == '/youtubes/new_arrival' %>
        <% if @headers && @headers['x-next-page'].present? %>
          <%= link_to "", url_for(params.to_unsafe_h.merge(page: @headers['x-next-page'])), rel: 'next' %>
        <% elsif @data && @data['youtubes'].respond_to?(:next_page) && @data['youtubes'].next_page %>
          <%= link_to "", url_for(params.to_unsafe_h.merge(page: @data['youtubes'].next_page)), rel: 'next' %>
        <% end %>
      <% end %>
    </nav>

    <div class="page-load-status">
      <p class="infinite-scroll-request loader-ellips">
          <span class="loader-ellips__dot"></span>
          <span class="loader-ellips__dot"></span>
          <span class="loader-ellips__dot"></span>
          <span class="loader-ellips__dot"></span>
      </p>
      <p class="infinite-scroll-last"></p>
      <p class="infinite-scroll-error"></p>
    </div>

  <div>
</div>

