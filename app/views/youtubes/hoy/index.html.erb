<div class="container">


  <div class="ui raised segment">
    <h1 class="title"><%= raw(@title) %></h1>

    <div class="ui six stackable cards column grid masonry">
      <% if ENV['API_MODE'] == 'true' %>
        <% @data.keys.each do |year| %>
          <% entry = @data[year] %>

          <div class="ui card item" style="min-height: 150px; min-width: 150px;">
            <a class="image" href="/youtubes/hoy/<%= year %>">
              <img src=<%= entry['thumbnail'] %> alt=<%= "HOY #{year}" %> />
            </a>
            <div class="content">
              <a class="header" href="/youtubes/hoy/<%= year %>"><%= "HOY #{year}" %></a>
            </div>
            <div class="extra content">
            </div>
          </div>
        <% end %>
      <% else %>
        <% if @data['hoys'].present? %>
          <% @data['hoys'].keys.each do |year| %>
            <% entries = @data['hoys'][year] %>
            <% first_entry = entries.first %>

            <div class="ui card item" style="min-height: 150px; min-width: 150px;">
              <a class="image" href="/youtubes/hoy/<%= year %>">
                <img src=<%= first_entry.thumbnail %> alt=<%= "HOY #{year}" %> />
              </a>
              <div class="content">
                <a class="header" href="/youtubes/hoy/<%= year %>"><%= "HOY #{year}" %></a>
              </div>
              <div class="extra content">
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</div>

