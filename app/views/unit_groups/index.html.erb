<div class="container">

  <!-- ###################### -->
  <!-- ユニットグループ検索   -->
  <!-- ###################### -->
  <div class="ui raised segment">
    <h1 class="title">ユニットグループ検索</h1>

    <div class="ui six stackable cards column grid masonry">

      <% @data['unit_groups']['entry'].each do |entry| %>

        <div class="ui card item" style="min-height: 250px; min-width: 150px;">
          <a class="image" href="/unit_groups/<%= entry['id'].to_s %>">
            <img src=<%= entry['thumbnail'] %> alt=<%= entry['name'] %> />
          </a>
          <div class="content">
            <a class="header" href="/unit_groups/<%= entry['id'].to_s %>"><%= entry['name'] %></a>
          </div>
        </div>

      <% end %>
    </div>

  </div>
</div>
